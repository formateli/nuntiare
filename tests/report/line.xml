<?xml version="1.0" ?>
<Nuntiare>
  <Author>Fredy Ramirez - https://formateli.com</Author>
  <Name>Line Test</Name>
  <Page>
    <LeftMargin>2cm</LeftMargin>
    <BottomMargin>2cm</BottomMargin>
    <RightMargin>2cm</RightMargin>
    <TopMargin>2cm</TopMargin>

    <PageHeader>
      <PrintOnLastPage>True</PrintOnLastPage>
      <PrintOnFirstPage>True</PrintOnFirstPage>
      <Height>2cm</Height>
      <Style>
        <BackgroundColor>Yellow</BackgroundColor>
        <Border>
          <Width>1pt</Width>
          <BorderStyle>Solid</BorderStyle>
          <Color>Black</Color>
        </Border>
      </Style>
      <ReportItems>
        <Textbox>
          <Height>5mm</Height>
          <Name>TextHeader</Name>
          <Width>170mm</Width>
          <CanGrow>True</CanGrow>
          <Value>=G.ReportName</Value>
          <Left>0mm</Left>
          <Top>0mm</Top>
          <Style>
            <FontWeight>Bold</FontWeight>
            <TextAlign>Center</TextAlign>
            <FontSize>14pt</FontSize>
          </Style>
        </Textbox>
        <Line>
          <Width>10cm</Width>
          <Height>0.00pt</Height>
          <Name>Line1</Name>
          <Top>10mm</Top>
          <Left>1mm</Left>
        </Line>
        <Textbox>
          <Height>5mm</Height>
          <Name>TextClipped</Name>
          <Width>40mm</Width>
          <CanGrow>True</CanGrow>
          <Value>Clipped in Section</Value>
          <Left>300pt</Left>
          <Top>7mm</Top>
          <Style>
            <BackgroundColor>Green</BackgroundColor>
            <Color>White</Color>
            <FontWeight>Bold</FontWeight>
            <FontSize>14pt</FontSize>
          </Style>
        </Textbox>
        <Rectangle>
          <Width>100pt</Width>
          <Height>50pt</Height>
          <Name>rec_header</Name>
          <Top>20pt</Top>
          <Left>450pt</Left>
          <Style>
            <BackgroundColor>Red</BackgroundColor>
          </Style>
        </Rectangle>
      </ReportItems>
    </PageHeader>
    <PageFooter>
      <PrintOnLastPage>true</PrintOnLastPage>
      <PrintOnFirstPage>true</PrintOnFirstPage>
      <Height>2cm</Height>
      <Style>
        <BackgroundColor>Yellow</BackgroundColor>
        <Border>
          <Width>1pt</Width>
          <BorderStyle>Solid</BorderStyle>
          <Color>Black</Color>
        </Border>
      </Style>
      <ReportItems>
        <Line>
          <Width>1in</Width>
          <Height>0in</Height>
          <Name>Line3</Name>
          <Top>27.5pt</Top>
          <Left>432.7pt</Left>
          <Style>
            <Border>
              <Width>2pt</Width>
              <BorderStyle>Solid</BorderStyle>
              <Color>Red</Color>
            </Border>
          </Style>
        </Line>
        <Textbox>
          <Height>1cm</Height>
          <Name>TextBoxFooter</Name>
          <Width>5cm</Width>
          <Value>=str(G.PageNumber) + ' of ' + str(G.TotalPages)</Value>
          <Top>5pt</Top>
          <Left>5pt</Left>
        </Textbox>
      </ReportItems>
    </PageFooter>

  </Page>
  <Body>
    <Style>
      <BackgroundColor>khaki</BackgroundColor>
      <Border>
        <Width>1pt</Width>
        <BorderStyle>Solid</BorderStyle>
        <Color>Black</Color>
      </Border>
    </Style>
    <ReportItems>
      <Textbox>
        <Height>2cm</Height>
        <Name>HolaMundoTextBox</Name>
        <Width>300pt</Width>
        <Value>Hola bello Mundo!</Value>
        <Top>19.7cm</Top>
        <Left>5pt</Left>
        <Style>
          <Border>
            <Width>5pt</Width>
            <BorderStyle>Solid</BorderStyle>
            <Color>Violet</Color>
          </Border>
          <RightBorder>
            <Color>Green</Color>
          </RightBorder>
        </Style>
      </Textbox>
      <Line>
        <Width>300pt</Width>
        <Height>20pt</Height>
        <Name>LineSolid1</Name>
        <Top>20pt</Top>
        <Left>40pt</Left>
        <Style>
          <Border>
            <Width>5pt</Width>
            <BorderStyle>Solid</BorderStyle>
            <Color>Blue</Color>
          </Border>
        </Style>
      </Line>
      <Line>
        <Width>300pt</Width>
        <Height>-20pt</Height>
        <Name>LineSolid2</Name>
        <Top>150pt</Top>
        <Left>40pt</Left>
        <Style>
          <Border>
            <Width>5pt</Width>
            <BorderStyle>Solid</BorderStyle>
            <Color>Green</Color>
          </Border>
        </Style>
      </Line>
      <Line>
        <Width>300pt</Width>
        <Height>0pt</Height>
        <Name>LineDotted</Name>
        <Top>100pt</Top>
        <Left>40pt</Left>
        <Style>
          <Border>
            <Width>3pt</Width>
            <BorderStyle>Dotted</BorderStyle>
          </Border>
        </Style>
      </Line>
      <Rectangle>
        <Width>10cm</Width>
        <Height>10cm</Height>
        <Name>RectContainer</Name>
        <Top>5mm</Top>
        <Left>5mm</Left>
        <ZIndex>1</ZIndex>
        <Style>
          <Border>
            <Width>2pt</Width>
            <BorderStyle>Solid</BorderStyle>
            <Color>Blue</Color>
          </Border>
        </Style>
        <ReportItems>
          <Textbox>
            <Height>5mm</Height>
            <Name>TextContainer</Name>
            <Width>5cm</Width>
            <Value>Container rectangle</Value>
            <Top>6cm</Top>
            <Left>1mm</Left>
            <Style>
              <Border>
                <Width>2pt</Width>
                <Color>Black</Color>
              </Border>
            </Style>
          </Textbox>
          <Rectangle>
            <Width>3cm</Width>
            <Height>2cm</Height>
            <Name>RecInContainer1</Name>
            <Top>0cm</Top>
            <Left>0mm</Left>
            <ZIndex>1</ZIndex>
            <Style>
              <BackgroundColor>Yellow</BackgroundColor>
              <Border>
                <Width>2pt</Width>
                <BorderStyle>Solid</BorderStyle>
                <Color>Red</Color>
              </Border>
            </Style>
          </Rectangle>
          <Rectangle>
            <Width>30cm</Width>
            <Height>2cm</Height>
            <Name>RecInContainer2</Name>
            <Top>7cm</Top>
            <Left>2cm</Left>
            <ZIndex>1</ZIndex>
            <Style>
              <BackgroundColor>Green</BackgroundColor>
              <Border>
                <Width>2pt</Width>
                <BorderStyle>Solid</BorderStyle>
                <Color>Red</Color>
              </Border>
            </Style>
            <ReportItems>
              <Textbox>
                <Height>5cm</Height>
                <Name>TextInContainer2</Name>
                <Width>5cm</Width>
                <Value>Rectangle clipped</Value>
                <Top>1cm</Top>
                <Left>1cm</Left>
                <Style>
                  <BackgroundColor>violet</BackgroundColor>
                  <Border>
                    <Width>2pt</Width>
                    <BorderStyle>Solid</BorderStyle>
                    <Color>Black</Color>
                  </Border>
                </Style>
              </Textbox>
            </ReportItems>
          </Rectangle>
        </ReportItems>
      </Rectangle>

