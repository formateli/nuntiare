<?xml version="1.0" encoding="UTF-8"?>
<Report>
  <Name>Test Table</Name>
  <Description></Description>
  <Author>Fredy Ramirez</Author>
  <PageWidth>210mm</PageWidth>
  <PageHeight>280mm</PageHeight>
  <Width>8.5in</Width>
  <TopMargin>1cm</TopMargin>
  <LeftMargin>1cm</LeftMargin>
  <RightMargin>1cm</RightMargin>
  <BottomMargin>1cm</BottomMargin>

  <DataSources>
      <DataSource>
          <Name>src1</Name>
          <ConnectionProperties>
              <DataProvider>xml</DataProvider>
              <ConnectString>=Parameters['conn_string']</ConnectString>
          </ConnectionProperties>
      </DataSource>
  </DataSources>

  <DataSets>
      <DataSet>
          <Name>panama</Name>
          <Query>
              <DataSourceName>src1</DataSourceName>
              <CommandText>SELECT * FROM cities</CommandText>
          </Query>

          <Fields>
              <Field>
                  <Name>f_id</Name>
                  <DataField>id</DataField>
              </Field> 
              <Field>
                  <Name>f_name</Name>
                  <DataField>name</DataField>
              </Field> 
              <Field>
                  <Name>f_province</Name>
                  <DataField>province</DataField>
              </Field>
          </Fields>

      </DataSet>
  </DataSets>

  <ReportParameters>

      <ReportParameter>
          <Name>conn_string</Name>
          <DataType>String</DataType>
          <CanBeNone>false</CanBeNone>
          <AllowBlank>false</AllowBlank>
          <DefaultValue>file=test/unittest/data/Panama.xml</DefaultValue>
      </ReportParameter>

  </ReportParameters>

  <PageHeader>
    <Height>1.5cm</Height>
    <PrintOnFirstPage>true</PrintOnFirstPage>
    <PrintOnLastPage>true</PrintOnLastPage>
    <Style>
      <BorderColor>
        <Bottom>Black</Bottom>
      </BorderColor>
      <BorderWidth>
        <Bottom>2 pt</Bottom>
      </BorderWidth>
      <BorderStyle>
        <Bottom>Solid</Bottom>
      </BorderStyle>
    </Style>
    <ReportItems>
      <Textbox>
        <Name>header1</Name>
        <Height>1.5cm</Height>
        <Width>180mm</Width>
        <Value>Table Test</Value>
        <Left>0.00pt</Left>
        <Top>3mm</Top>
        <Style>
          <FontWeight>Bold</FontWeight>
          <FontSize>16pt</FontSize>
          <TextAlign>Center</TextAlign>
        </Style>
        <ZIndex>1</ZIndex>
      </Textbox>
    </ReportItems>
  </PageHeader>

  <Body>
    <Height>250pt</Height>
    <ReportItems>

        <Table>
            <Name>table11</Name>
            <Top>5mm</Top>
            <Left>5mm</Left>

            <DataSetName>panama</DataSetName>


            <Style>
                <BackgroundColor>Yellow</BackgroundColor>
                <BorderColor>
                  <Default>Red</Default>
                </BorderColor>
                <BorderWidth>
                    <Default>3 pt</Default>
                </BorderWidth>
                <BorderStyle>
                    <Default>Solid</Default>
                </BorderStyle>
            </Style>

            <TableColumns>
                <TableColumn>
                    <Width>40mm</Width>
                </TableColumn>
                <TableColumn>
                    <Width>50mm</Width>
                </TableColumn>
                <TableColumn>
                    <Width>60mm</Width>
                </TableColumn>
            </TableColumns>

            <TableDetails>
                <TableRows>
                    <TableRow>
                        <Height>10mm</Height>
                        <TableCells>
                            <TableCell>
                              <ReportItems>
                                <Textbox>
                                    <Name>txt_id</Name>
                                    <Value>Fields['id']</Value>
                                    <Style>
                                        <BorderStyle>
                                            <Default>Solid</Default>
                                        </BorderStyle>
                                    </Style>
                                </Textbox>
                              </ReportItems>
                            </TableCell>


                            <TableCell>
                              <ReportItems>
                                <Textbox>
                                    <Name>txt_name</Name>
                                    <Value>Fields['name']</Value>
                                    <Style>
                                        <BorderStyle>
                                            <Default>Solid</Default>
                                        </BorderStyle>
                                    </Style>
                                </Textbox>
                              </ReportItems>
                            </TableCell>

                            <TableCell>
                              <ReportItems>
                                <Textbox>
                                    <Name>txt_province</Name>
                                    <Value>Fields['province']</Value>
                                    <Style>
                                        <BorderStyle>
                                            <Default>Solid</Default>
                                        </BorderStyle>
                                    </Style>
                                </Textbox>
                              </ReportItems>
                            </TableCell>


                        </TableCells>
                    </TableRow>
                </TableRows>
            </TableDetails>

        </Table>

    </ReportItems>

    <Columns>1</Columns>

  </Body>

  <PageFooter>
    <Height>1.5cm</Height>
    <PrintOnFirstPage>true</PrintOnFirstPage>
    <PrintOnLastPage>true</PrintOnLastPage>
    <Style>
      <BorderColor>
        <Top>Black</Top>
      </BorderColor>
      <BorderWidth>
        <Top>2 pt</Top>
      </BorderWidth>
      <BorderStyle>
        <Top>Solid</Top>
      </BorderStyle>
    </Style>
    <ReportItems>
      <Textbox>
        <Name>reportname</Name>
        <Height>8mm</Height>
        <Width>60mm</Width>
        <Value>='Report name: ' + Globals['report_name']</Value>
        <Left>0mm</Left>
        <Top>2mm</Top>
        <ZIndex>0</ZIndex>
      </Textbox>
      <Textbox>
        <Name>reportfolder</Name>
        <Height>8mm</Height>
        <Width>60mm</Width>
        <Value>='Folder: ' + Globals['report_folder']</Value>
        <Left>0mm</Left>
        <Top>8mm</Top>
        <ZIndex>1</ZIndex>
      </Textbox>
      <Textbox>
        <Name>reportfile</Name>
        <Height>8mm</Height>
        <Width>60mm</Width>
        <Value>='File: ' + Globals['report_file']</Value>
        <Left>0mm</Left>
        <Top>14mm</Top>
        <ZIndex>1</ZIndex>
      </Textbox>
      <Textbox>
        <Name>reporttime</Name>
        <Height>8mm</Height>
        <Width>90mm</Width>
        <Value>=Globals['execution_time']</Value>
        <Left>100mm</Left>
        <Top>2mm</Top>
        <ZIndex>2</ZIndex>
        <Style>
            <Format>{:%A, %m-%d-%Y %H:%M:%S}</Format>
            <TextAlign>Right</TextAlign>
        </Style>
      </Textbox>
      <Textbox>
        <Name>reportpage</Name>
        <Height>8mm</Height>
        <Width>90mm</Width>
        <Value>='Page ' + str(Globals['page_number']) + ' of ' + str(Globals['total_pages'])</Value>
        <Left>100mm</Left>
        <Top>8mm</Top>
        <ZIndex>2</ZIndex>
        <Style>
            <TextAlign>Right</TextAlign>
        </Style>
      </Textbox>
    </ReportItems>
  </PageFooter>

</Report>
